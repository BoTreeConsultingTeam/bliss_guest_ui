<!-- Modal -->
<div id="search_result_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-body">
        <p class="text-center" id="warning-text"><%= @message %></p>
      </div>
      <div class="modal-footer text-center">
        <%= form_tag create_user_account_path, method: :post do %>
          <%= hidden_field_tag :email, @email %>
          <%= hidden_field_tag :role, :guest_user %>
          <%= submit_tag 'Create', class: "btn btn-success btn-sm"%>
        <% end %>
        <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal" title="Cancel">Cancel</button>
      </div>
    </div>

  </div>
</div>
